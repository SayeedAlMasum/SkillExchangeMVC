@* ForgotPasswordConfirmation.cshtml *@
@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<h2>Password Reset Email Sent</h2>
<p>If an account with the email <strong>@ViewBag.Email</strong> exists, a password reset link has been prepared.</p>
<a asp-action="ResetPassword" asp-route-email="@ViewBag.Email" asp-route-token="@ViewBag.Token">Reset Password</a>
