@* Course/Index.cshtml *@
@model CourseViewModel

<h2>Available Courses</h2>

<!-- Search Box for User -->
<!--<div class="form-group">
    <label for="search">Search Courses</label>
    <input type="text" id="search" class="form-control" placeholder="Search for a course..." onkeyup="filterCourses()" />
</div>-->

<!-- List of Available Courses -->
<table id="coursesTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Subcategory</th>
            <th>Is Premium</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody id="courseTable">
        @if (Model.Courses?.Any() ?? false)
        {
            @foreach (var item in Model.Courses)
            {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Category</td>
                            <td>@item.SubCategory</td>
                            <td>@item.IsPremium</td>
                            <td>
                        @if (item.IsPremium)
                        {
                                        <a asp-Controller="Payment" asp-action="CreatePayment" asp-route-courseId="@item.CourseId" class="btn btn-warning btn-sm">Enroll</a>
                        }
                        else
                        {
                                        <a asp-page="/Content" asp-route-courseId="@item.CourseId" class="btn btn-primary btn-sm">Content</a>
                        }
                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="4" class="text-center">No courses available.</td>
                </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        // Initialize DataTables
        const table = new DataTable('#coursesTable', {
            searchable: true,
            paging: true,
            fixedHeight: false
        });

        // Optional: Custom search input (bind manually)
        // document.getElementById("search").addEventListener("keyup", function () {
        //     table.search(this.value).draw();
        // });
    </script>
}