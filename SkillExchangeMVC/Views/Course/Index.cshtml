@* Course/Index.cshtml *@
@model List<Course>

<h2>Available Courses</h2>

@* <a asp-controller="Course" asp-action="CreateCourse" class="btn btn-primary"> *@
@*     <i class="bi bi-plus-circle"></i>  Add New Courses *@
@* </a> *@

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Course Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Sub Category</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
       
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.Title</td>
                    <td>@item.Category</td>
                    <td>@item.SubCategory</td>
                    <td>@item.IsPremium</td>
                    <td>
                        <a asp-action="" asp-controller="" asp-route-id="@item.CourseId" class="btn btn-primary">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.CourseId" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
           }
    </tbody>
    </table>
